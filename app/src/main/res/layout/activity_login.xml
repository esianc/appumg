<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="136dp"
        android:layout_height="117dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/icon_us" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="1">

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_weight="1"
        android:text="Login Usuario"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_weight="1">

    </LinearLayout>

    <EditText
        android:id="@+id/idCorreoLogin"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:hint="Correo"
        android:inputType="textEmailAddress"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/idContraseñaLogin"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_weight="1">

    </LinearLayout>

    <Button
        android:id="@+id/idLoginLogin"
        android:layout_width="242dp"
        android:layout_height="60dp"
        android:background="#088063"
        android:hint="Entrar"
        android:textColorHint="@color/BLANCO"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:gravity="center|bottom">

    </LinearLayout>

    <Button
        android:id="@+id/idRegistroLogin"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:background="#00ffffff"
        android:baselineAligned="false"
        android:hint="Registrarme"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_weight="1"
        android:gravity="center|bottom">

    </LinearLayout>

</LinearLayout>